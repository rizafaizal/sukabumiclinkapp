<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="3dp"
    android:id="@+id/cv_kelola_sampah_activity"
    app:cardBackgroundColor="@color/cardColor"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:attr/selectableItemBackground"
        android:orientation="horizontal"
        android:padding="12dp">

        <ImageView
            android:id="@+id/img_kelola"
            android:background="@color/colorAccent"
            android:layout_marginRight="13dp"
            android:scaleType="centerCrop"
            android:layout_width="90dp"
            android:layout_height="90dp"/>

        <RelativeLayout
            android:layout_marginRight="13dp"
            android:layout_width="220dp"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv_jenis_kelola"
                style="@style/TextAppearance.AppCompat.Headline"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sandal"
                android:maxLines="1"
                android:textColor="@color/primaryTextColor" />

            <TextView
                android:id="@+id/tv_oleh_kelola"
                style="@style/TextAppearance.AppCompat.Subhead"
                android:layout_below="@+id/tv_jenis_kelola"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dari : Cafe Sahabat"
                android:maxLines="1"
                android:ellipsize="end"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/tv_alamat_kelola"
                style="@style/TextAppearance.AppCompat.Body1"
                android:layout_below="@+id/tv_oleh_kelola"
                android:layout_marginTop="3dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Alamat : Jl. Cicantayan No.24"
                android:maxLines="1"
                android:ellipsize="end" />
        </RelativeLayout>

        <LinearLayout
            android:orientation="vertical"
            android:gravity="right"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/img_edit_kelola"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:tint="@android:color/holo_orange_dark"
                android:src="@drawable/ic_edit_accent_24dp" />

            <ImageView
                android:id="@+id/img_delete_kelola"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:tint="@android:color/holo_red_dark"
                android:src="@drawable/ic_delete_forever_accent_24dp" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>