<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl_berita_dash"
    android:orientation="vertical"
    android:background="?android:attr/selectableItemBackground"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_list_berita"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginEnd="16dp"
        android:layout_centerVertical="true"
        android:layout_marginRight="16dp"
        app:cardElevation="0dp"
        app:cardCornerRadius="8dp">

        <ImageView
            android:id="@+id/img_list_berita_dash"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:background="@color/colorAccent" />

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@id/cv_list_berita"
        android:layout_toRightOf="@id/cv_list_berita"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_list_judul_berita_dash"
            style="@style/TextAppearance.AppCompat.Headline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:maxLines="2"
            android:textSize="17sp"
            android:ellipsize="end"
            android:textStyle="bold"
            tools:text="Judul Untuk Berita Yang Akan Ditampilkan Nanti" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/img_icon1"
                android:src="@drawable/icon_berita"
                android:layout_centerVertical="true"
                android:layout_width="30dp"
                android:layout_height="30dp"/>

            <TextView
                android:id="@+id/tv_list_tag_berita_dash"
                style="@style/TextAppearance.AppCompat.Subhead"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:ellipsize="end"
                android:maxLines="2"
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@id/img_icon1"
                android:layout_toRightOf="@id/img_icon1"
                tools:text="Nasional, Sukabumi, Kerajinan" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@id/tv_list_tag_berita_dash"
                android:layout_toRightOf="@id/tv_list_tag_berita_dash">

                <TextView
                    android:id="@+id/tv_list_date_berita_dash"
                    style="@style/TextAppearance.AppCompat.Body1"
                    android:textSize="10sp"
                    android:textColor="@color/primaryTextColor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="2"
                    tools:text="19/11/2020 00:80:99" />

            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>